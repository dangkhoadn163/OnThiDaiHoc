<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:paddingTop="40dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_math"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_math"
                    android:text="Toán học" />
                <Button
                    android:id="@+id/btn_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_english"
                    android:text="Tiếng anh" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:paddingTop="40dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_physic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_physics"
                    android:text="Vật Lý" />
                <Button
                    android:id="@+id/btn_chemistry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_chemistry"
                    android:text="Hóa học" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:gravity="center"
                android:paddingTop="40dp">
                <Button
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_history"
                    android:text="lịch Sử" />
                <Button
                    android:id="@+id/btn_geography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_geography"
                    android:text="Địa lý" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_education"
                    android:text="GDCD" />
                <Button
                    android:id="@+id/btn_biology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_monhoc"
                    android:drawableTop="@drawable/ic_biology"
                    android:text="Sinh học" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>